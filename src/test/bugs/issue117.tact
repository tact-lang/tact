fun scopeUntil() {
    do {
        let a: Int = 0;
    } until (true);
    let a: String = "abc";
}

fun scopeRepeat() {
    repeat (1) {
        let a: Int = 0;
    }
    let a: String = "abc";
}

fun scopeWhile() {
    while (true) {
        let a: Int = 0;
    }
    let a: String = "abc";
}

fun scopeIf() {
    if (true) {
        let a: Int = 0;
    }
    let a: String = "abc";
}